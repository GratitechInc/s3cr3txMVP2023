@page
@model ForgotModel
@{
    ViewData["Title"] = "Please enter your email address";
}
@section Members{
    <partial name="_LoginRegisterPartial" />
}
<h1>Please enter the email address associated with your s3cr3tx account:</h1>
<form asp-page-handler="view" formaction="post">
    <center>
        <table>
            <tr>
                <td align="right">
                    <label id="lblOutput">&nbsp;</label>
                </td>
                <td>
                    @Model._output
                </td>
            </tr>
            <tr>
                <td align="right">
                    <label id="lblEmail">Email: </label>
                </td>
                <td>
                    <input id="txtEmail" asp-for="forgotCurrent.member_email" maxlength="256" />
