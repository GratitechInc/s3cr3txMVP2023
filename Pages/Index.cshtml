@page
@model s3cr3tx.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "s3cr3tx : helping you protect secrets in code";
}
@section Login{
    <partial name="_LoginPartial" />
}
<div class="text-center">
    <center>
        <br/>
        <h1 class="display-6">Welcome to s3cr3tx</h1>
        Use the form below to interact with s3cr3tx API
        <br />
        <br/>
    </center>
    <form asp-page-handler="view" formaction="post">
        <center>
            <table>
                <tr>
                    <td align="right">
                        <label id="lblEmail">Email: </label>
                    </td>
                    <td>
                        <input id="txtEmail" asp-for="S3Cr3Tx.Email" maxlength="256" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblToken">API Key: </label>
                    </td>
                    <td>
                        <input id="txtToken" maxlength="256" asp-for="S3Cr3Tx.Token" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblAuth">Auth Code: </label>
                    </td>
                    <td>
                        <input id="txtAuthCode" maxlength="256" asp-for="S3Cr3Tx.AuthCode" />
                    </td>

                </tr>
                <tr>
                    <td align="right">
                        <label id="lblDirection">Enter e to encrypt or d to decrypt: </label>
                    </td>
                    <td>
                        <input id="txtDirection" asp-for="S3Cr3Tx.EoD" maxlength="256" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblInput">Input: </label>
                    </td>
                    <td>
                        <textarea id="txtInput" asp-for="S3Cr3Tx.Input"></textarea>
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblInput">&nbsp;</label>
                    </td>
                    <td>
                        <input type="submit" id="btnSubmit" disabled="disabled" />
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        <label id="lblOutput">Output: </label>
                    </td>
                    <td rowspan="10" width="200"><textarea>@Model.S3Cr3Tx.Output</textarea></></td>
                </tr>
            </table>
        </center>

    </form>
    <center>
        <br/>
        <p>Our <a href="https://www.github.com/GratitechInc">GitHub</a> repos include examples of interacting with s3cr3tx API in Java, C#, Python, and Go</p>
        </p>
    </center>
</div>
@section sitescripts{
    <partial name="_SiteScriptsPartial" />
}
